<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3AB6B"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/nexon_gothic"
        android:text="Registeration Page"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/edit_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:background="#AAAAAA"
        android:ems="12"
        android:fontFamily="@font/nexon_gothic"
        android:hint=" 아이디 (이메일 포함 필수)"
        android:inputType="textPersonName"
        android:minHeight="40dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edit_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="#AAAAAA"
        android:ems="12"
        android:fontFamily="@font/nexon_gothic"
        android:hint=" 비밀번호 (6~15자리)"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/edit_pw_re"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:background="#AAAAAA"
        android:ems="12"
        android:fontFamily="@font/nexon_gothic"
        android:hint=" 비밀번호 확인"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/edit_pw_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/nexon_gothic"
        android:text="숫자, 문자, 특수문자 중 2가지 포함(6~15자)"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="18dp" />


    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#3F6DC8"
        android:fontFamily="@font/nexon_gothic"
        android:text="회원가입" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:backgroundTint="#308F4C"
        android:fontFamily="@font/nexon_gothic"
        android:text="취소" />


</LinearLayout>